<div class="postDiv">
    {{#each user.Posts}}
    <div class="post">
        <h4>You posted:</h4>
        <p class="text">{{post}}</p>
        <button data-id="{{id}}">Delete</button>
        <button class="commentBtn" data-id="{{id}}">Add comment</button>
    </div>
    {{/each}}
</div>
<div class="addPostDiv">
  <h2>Add a post</h2>
<form id="postForm">
    <textarea id="postInput" placeholder="text"></textarea>
    <br>
    <button>Post!</button>
</form>  
</div>

